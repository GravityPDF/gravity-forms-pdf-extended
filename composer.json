{
    "config": {
        "preferred-install": "dist",
        "autoloader-suffix": "GravityPDFPlugin",
        "platform": {
          "php": "5.6.39"
        }
    },

    "require": {
        "mpdf/mpdf": "^8.0.0",
        "querypath/querypath": ">=3.0.0",
        "monolog/monolog": "^1.24.0",
        "codeguy/upload": "^1.3",
        "spatie/url-signer": "^1.0",
        "mpdf/qrcode": "^1.0"
    },

    "require-dev": {
        "phpunit/phpunit": ">4.0 <7"
    },

    "autoload": {
    	"psr-4": {
    		"GFPDF\\": "src/"
    	}
    },

    "scripts": {
      "post-install-cmd": [
        "yarn global add gulp-cli",
        "yarn && gulp",
        "yarn run build"
      ],

      "post-update-cmd": [
        "yarn global add gulp-cli",
        "yarn && gulp",
        "yarn run build"
      ]
    }
}
