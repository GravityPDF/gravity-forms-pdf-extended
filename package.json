{
  "name": "gravity-pdf",
  "private": true,
  "dependencies": {
    "classnames": "^2.2.6",
    "lodash.debounce": "^4.0.8",
    "prop-types": "^15.7.2",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-dropzone": "^9.0.0",
    "react-redux": "7.1.3",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "redux": "4.0.4",
    "redux-saga": "^1.0.2",
    "redux-watch": "^1.1.1",
    "reselect": "^4.0.0",
    "superagent": "3.8.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@wordpress/scripts": "^5.1.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "8.0.5",
    "babel-plugin-istanbul": "^5.1.1",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "backbone": "^1.4.0",
    "cross-env": "^5.2.0",
    "dotenv": "^8.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-react": "^9.2.0",
    "gulp": "^4.0.0",
    "gulp-clean-css": "^4.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-sort": "^2.0.0",
    "gulp-watch": "^5.0.1",
    "gulp-wp-pot": "^2.3.4",
    "jest": "^24.9.0",
    "jest-enzyme": "^7.1.2",
    "jquery": "^3.4.1",
    "json-loader": "^0.5.7",
    "redux-devtools-extension": "^2.13.8",
    "redux-mock-store": "^1.5.3",
    "standard": "^14.3.4",
    "testcafe": "^1.6.0",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "underscore": "^1.9.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-dev-middleware": "^3.6.0",
    "webpack-merge": "^4.2.1"
  },
  "scripts": {
    "lint:js": "eslint src/assets/js/**/*.js",
    "lint:js:fix": "eslint src/assets/js/**/*.js --fix",
    "lint:php": "npm run env docker-run -- php composer lint:errors",
    "lint:php:format": "npm run env docker-run -- php composer format",

    "test:php": "wp-scripts env test-php",
    "test:php:multisite": "cross-env WP_MULTISITE=1 wp-scripts env test-php",

    "test:js-e2e": "cross-env NODE_ENV=test testcafe chrome tests/e2e -s takeOnFails=true,fullPage=true",
    "test:js-e2e:headless": "cross-env NODE_ENV=test testcafe chrome:headless tests/e2e -s takeOnFails=true,fullPage=true",
    "test:js-e2e:file": "cross-env NODE_ENV=test testcafe chrome -s takeOnFails=true,fullPage=true",
    "test:js-e2e:watch": "cross-env NODE_ENV=test testcafe chrome tests/e2e -L",
    "test:js-e2e:file:watch": "cross-env NODE_ENV=test testcafe chrome -L",

    "test:js-unit": "jest --verbose",
    "test:js-unit:coverage": "jest --coverage --verbose",
    "test:js-unit:watch": "jest --watchAll",

    "prebuild": "yarn global add gulp-cli && yarn && yarn prebuild:core-fonts",
    "prebuild:core-fonts": "bash bin/json-payload.sh https://api.github.com/repos/GravityPDF/mpdf-core-fonts/contents/ core-fonts.json",

    "build:production": "gulp && cross-env NODE_ENV=production webpack --mode production",
    "build:dev": "gulp && cross-env NODE_ENV=development webpack --mode development",
    "build:watch:css": "gulp watch",
    "build:watch:js": "cross-env NODE_ENV=development webpack --progress --colors --watch --mode development",

    "check-licenses": "wp-scripts check-licenses --prod --gpl2",

    "env": "wp-scripts env",
    "env:install": "bash bin/install.sh",
    "env:install:gf": "bash bin/install-gravityforms.sh",
    "env:install:phpunit": "bash bin/install-phpunit.sh",
    "env:reset": "bash bin/reset.sh"
  },
  "wp-env": {
    "plugin-dir": "gravity-forms-pdf-extended",
    "plugin-name": "Gravity PDF",
    "docker-template": "./.docker/docker-compose.override.yml.template"
  }
}
